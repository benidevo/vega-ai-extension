#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged (handles linting and formatting of staged files)
echo "📝 Linting and formatting staged files..."
npx lint-staged

# Run type check
echo "🔎 Type checking..."
npm run typecheck

echo "✅ Pre-commit checks passed!"
